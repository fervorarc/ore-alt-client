# ============================================
# ORE Frontend Environment Configuration
# ============================================
# Copy this file to .env.local for local development

# ============================================
# Solana Network Configuration
# ============================================
# Mainnet (Production)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Alternative: Use a dedicated RPC provider for better performance
# NEXT_PUBLIC_SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# NEXT_PUBLIC_SOLANA_RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_API_KEY
# NEXT_PUBLIC_SOLANA_RPC_URL=https://solana.getblock.io/YOUR_API_KEY/mainnet/

# Devnet (Testing)
# NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Localnet (Local Development)
# NEXT_PUBLIC_SOLANA_RPC_URL=http://localhost:8899

# ============================================
# ORE Protocol Configuration
# ============================================
NEXT_PUBLIC_ORE_PROGRAM_ID=oreV3EG1i9BEgiAJ8b177Z2S2rMarzak4NMv1kULvWv
NEXT_PUBLIC_ORE_MINT=oreoU2P8bN6jkk3jbaiVxYnG1dCXcYxwhwyK9jSybcp

# ============================================
# Feature Flags
# ============================================
# Enable real-time WebSocket subscriptions
NEXT_PUBLIC_ENABLE_WS=true

# Enable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable debug mode (shows additional information)
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================
# UI Configuration
# ============================================
# Default commitment level for transactions
# Options: processed, confirmed, finalized
NEXT_PUBLIC_COMMITMENT=confirmed

# Auto-refresh interval for data (milliseconds)
NEXT_PUBLIC_REFRESH_INTERVAL=10000

# Transaction timeout (milliseconds)
NEXT_PUBLIC_TX_TIMEOUT=30000

# ============================================
# Optional: Custom Branding
# ============================================
# NEXT_PUBLIC_APP_NAME=ORE Mining Dashboard
# NEXT_PUBLIC_APP_DESCRIPTION=Decentralized mining on Solana
# NEXT_PUBLIC_THEME=dark

# ============================================
# Analytics (Optional)
# ============================================
# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# PostHog
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
