# ============================================
# ORE Protocol Environment Configuration
# ============================================
# Copy this file to .env and configure for your environment

# ============================================
# Network Configuration
# ============================================
# Options: mainnet-beta, devnet, testnet, localnet
SOLANA_NETWORK=mainnet-beta

# ============================================
# Solana RPC Configuration
# ============================================
# Mainnet RPC (choose one or use your own)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# SOLANA_RPC_URL=https://rpc.ankr.com/solana
# SOLANA_RPC_URL=https://solana-api.projectserum.com

# Devnet RPC (for testing)
# SOLANA_RPC_URL=https://api.devnet.solana.com

# Localnet RPC (for local development)
# SOLANA_RPC_URL=http://localhost:8899

# WebSocket RPC (optional, derived from HTTP URL if not set)
# SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# ============================================
# Wallet Configuration
# ============================================
# Path to your Solana keypair for CLI operations
SOLANA_KEYPAIR_PATH=~/.config/solana/id.json

# Alternative: Use a specific keypair for mining
# MINING_KEYPAIR_PATH=~/.config/solana/mining-wallet.json

# ============================================
# ORE Program Configuration
# ============================================
# ORE Program ID (DO NOT CHANGE unless using custom deployment)
ORE_PROGRAM_ID=oreV3EG1i9BEgiAJ8b177Z2S2rMarzak4NMv1kULvWv

# ORE Token Mint Address (DO NOT CHANGE)
ORE_MINT_ADDRESS=oreoU2P8bN6jkk3jbaiVxYnG1dCXcYxwhwyK9jSybcp

# ============================================
# Frontend Configuration (Next.js)
# ============================================
# Public variables (exposed to browser)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_ORE_PROGRAM_ID=oreV3EG1i9BEgiAJ8b177Z2S2rMarzak4NMv1kULvWv
NEXT_PUBLIC_ORE_MINT=oreoU2P8bN6jkk3jbaiVxYnG1dCXcYxwhwyK9jSybcp

# Enable WebSocket subscriptions for real-time updates
NEXT_PUBLIC_ENABLE_WS=true

# Frontend port (optional)
NEXT_PUBLIC_PORT=3000

# ============================================
# Mining Configuration (Optional)
# ============================================
# Auto-mining settings
AUTO_MINE_ENABLED=false
AUTO_MINE_AMOUNT=0.1  # SOL amount to deploy per round
AUTO_MINE_BLOCK=random  # Block selection: random, 0-24, or "strategy"
AUTO_MINE_INTERVAL=60000  # Check interval in milliseconds

# ============================================
# Development Configuration
# ============================================
# Enable debug logging
DEBUG=false
LOG_LEVEL=info  # Options: error, warn, info, debug, trace

# Enable transaction simulation before sending
SIMULATE_TRANSACTIONS=true

# Transaction confirmation commitment level
# Options: processed, confirmed, finalized
COMMITMENT_LEVEL=confirmed

# ============================================
# Advanced RPC Configuration
# ============================================
# RPC request timeout (milliseconds)
RPC_TIMEOUT=30000

# Maximum retries for failed RPC requests
RPC_MAX_RETRIES=3

# Retry delay (milliseconds)
RPC_RETRY_DELAY=1000

# ============================================
# Fee Configuration
# ============================================
# Priority fee (in lamports) - set to 0 for default
# Higher priority fees = faster transaction processing
PRIORITY_FEE=0

# Maximum fee willing to pay (in lamports)
MAX_FEE=10000

# ============================================
# Monitoring & Analytics (Optional)
# ============================================
# Enable performance monitoring
ENABLE_MONITORING=false

# Analytics endpoint (if using custom analytics)
# ANALYTICS_URL=https://your-analytics-endpoint.com

# ============================================
# Testing Configuration
# ============================================
# Use test mode (connects to devnet/localnet)
TEST_MODE=false

# Airdrop amount for testing (devnet only, in SOL)
TEST_AIRDROP_AMOUNT=10

# ============================================
# Security Configuration
# ============================================
# Require transaction confirmation before proceeding
REQUIRE_CONFIRMATION=true

# Enable hardware wallet support
HARDWARE_WALLET_ENABLED=false

# ============================================
# Rate Limiting
# ============================================
# Maximum requests per second to RPC
MAX_RPS=10

# Request queue size
REQUEST_QUEUE_SIZE=100

# ============================================
# Caching Configuration
# ============================================
# Enable account data caching
ENABLE_CACHE=true

# Cache TTL (time to live in seconds)
CACHE_TTL=60

# ============================================
# Notes
# ============================================
# 1. Never commit .env files with real credentials to version control
# 2. Use environment-specific .env files (.env.local, .env.production)
# 3. For production, use secure secret management (AWS Secrets Manager, etc.)
# 4. RPC endpoints may have rate limits - consider using paid tier for production
# 5. Keep your keypair files secure and never share them
# 6. For frontend, only NEXT_PUBLIC_* variables are exposed to the browser
